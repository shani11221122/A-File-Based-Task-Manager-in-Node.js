<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Task Manager</title>
</head>
<body class="bg-gradient-to-br from-zinc-900 to-black text-white font-sans">

  <div class="container mx-auto px-6 py-12 min-h-screen">
    
    <!-- Navigation -->
    <a href="/" class="text-blue-400 hover:text-blue-300 transition duration-300 text-lg font-medium">
      ← Go back to Home
    </a>

    <!-- Title -->
    <h1 class="text-5xl md:text-6xl font-extrabold tracking-tight mt-10 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500">
      <%= filename %> </h1>

    <!-- Description Card -->
    <div class="mt-10 bg-zinc-800/70 rounded-2xl p-8 shadow-lg border border-zinc-700 hover:shadow-purple-700 transition duration-300">
      <p class="text-lg md:text-xl leading-relaxed text-zinc-300">  <%= filedata %>  </p>
    </div>

    <!-- Footer -->
    <div class="mt-16 text-sm text-zinc-500 text-center">
      © 2025 Task Manager. All rights reserved.
    </div>

  </div>

</body>
</html>
